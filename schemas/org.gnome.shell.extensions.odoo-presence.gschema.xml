<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="org.gnome.shell.extensions.odoo-presence">
  <schema id="org.gnome.shell.extensions.odoo-presence" path="/org/gnome/shell/extensions/odoo-presence/">
    
    <key name="kiosk-url" type="s">
      <default>""</default>
      <summary>Kiosk URL</summary>
      <description>Full Kiosk Mode URL (e.g. .../hr_attendance/TOKEN)</description>
    </key>

    <key name="employee-id" type="i">
      <default>0</default>
      <summary>Employee ID</summary>
      <description>Numeric Employee ID in Odoo</description>
    </key>

    <key name="employee-pin" type="s">
      <default>""</default>
      <summary>Employee PIN</summary>
      <description>Employee PIN Code</description>
    </key>

    <key name="update-frequency" type="i">
      <default>300</default>
      <summary>Update Frequency</summary>
      <description>Update frequency in seconds</description>
    </key>

  </schema>
</schemalist>